<Page x:Class="MangaTrackerDesktop.LibManga"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MangaTrackerDesktop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LibManga">

    <Grid>
        <Button x:Name="btnBack" Click="btnBack_Click" Width="80" Height="30" Margin="10,10,0,0" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Image HorizontalAlignment="Left" Width="96" Stretch="Fill" Margin="10,294,0,0" Height="103" VerticalAlignment="Top"/>
        <TextBlock Text="Manga Name" Height="32" Margin="117,294,10,0" VerticalAlignment="Top"/>
        <TabControl Margin="10,45,10,10">
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Stats" FontSize="20" />
                </TabItem.Header>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Volumes" FontSize="20" />
                </TabItem.Header>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Prices" FontSize="20" />
                </TabItem.Header>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
